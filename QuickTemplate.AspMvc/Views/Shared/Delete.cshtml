@*@BaseCode*@
@model QuickTemplate.AspMvc.Models.ModelObject

@{
    var image = (string)(ViewBag.Image ?? "banner.jpg");

    ViewData["Title"] = "Delete";
}

<img class="card-img-top" src="@($"/img/{image}")" style="margin-top: -20px; margin-bottom: -50px" alt="Banner">
<h1>Delete</h1>
<h3>@Model!.GetType().Name</h3>
<hr />
<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    @if (string.IsNullOrEmpty(ViewBag.Error) == false)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    @await Html.PartialAsync("_DisplayModel", Model)

    <form asp-action="Delete">
        @await Html.PartialAsync("_SubmitBack", new QuickTemplate.AspMvc.Models.View.SubmitBackCmd() { SubmitAction="Delete", SubmitText="Delete", SubmitCss="btn btn-danger", FromSubmitToBack=true })
    </form>
</div>
